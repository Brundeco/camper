# http://editorconfig.org/
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false
ensure_newline_at_eof_on_save = false

[**.php]
indent_style = space
indent_size = 4

[**.blade.php]
indent_style = space
indent_size = 2
